<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_survey_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Survey question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:id="@+id/survey_button"/>

    <Button
        android:text="Update question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/survey_button"
        android:layout_alignStart="@+id/survey_button"/>

    <Button
        android:text="Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_button"
        android:layout_alignLeft="@+id/update_button"
        android:layout_alignStart="@+id/update_button"
        android:layout_marginTop="38dp"
        android:id="@+id/results_button"/>
</RelativeLayout>
