<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/survey_activity">

    <Button
        android:text="Update Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:text="Survey Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/survey_button"
        android:layout_toRightOf="@+id/update_button"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

    <Button
        android:text="Results/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset_button"
        android:layout_toRightOf="@+id/survey_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>